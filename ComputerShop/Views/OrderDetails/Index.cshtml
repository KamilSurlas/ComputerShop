@model List<OrderDetail>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabela z danymi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Order Date</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>ApplicationUserId</th>
                    <th>Name</th>
                    <th>LastName</th>
                    <th>City</th>
                    <th>Street Address</th>
                    <th>PostalCode</th>
                    <th>Region</th>
                    <th>Country</th>
                    <th>PhoneNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-danger fw-bold">@item.Order.Status.Name</td>
                        <td>@item.Order.OrderDate</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Order.ApplicationUserId</td>
                        <td>@item.Order.Name</td>
                        <td>@item.Order.LastName</td>
                        <td>@item.Order.City</td>
                        <td>@item.Order.StreetAddress</td>
                        <td>@item.Order.PostalCode</td>
                        <td>@item.Order.Region</td>
                        <td>@item.Order.Country</td>
                        <td>@item.Order.PhoneNumber</td>
                        <td>
                            <div class="col-6 text-end">
                                <a asp-controller="OrderDetails" asp-action="EditOrderStatus" asp-route-orderId="@item.Order.Id" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i>  Edit Order Status
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
